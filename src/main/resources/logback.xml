<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>worrell.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--
       Send INFO logs we don't want the user to see to the file.  In general,
       these come from third party tools which use slf4j.
    -->
    <logger name="org.reflections.Reflections" level="INFO" additivity="false">
        <appender-ref ref="file" />
    </logger>
    <logger name="com.jcabi.aspects.aj.MethodValidator" level="INFO" additivity="false">
        <appender-ref ref="file" />
    </logger>

    <root level="DEBUG">
        <appender-ref ref="file" />
        <appender-ref ref="console" />
    </root>

</configuration>
